/ templates
%script#title-template{:type => 'text/x-handlebars-template'}
  %h1
    {{name}}'s Tweets
    %img.avatar{:src => '{{profile_image_url}}'}

%script#content-template{:type => 'text/x-handlebars-template'}
  .content
    %span.tweet {{text}}
    %img.avatar.small{:src => '{{user.profile_image_url}}'}
    %time {{timestamp created_at}}

%script#content-thumbnail-template{:type => 'text/x-handlebars-template'}
  %img.thumbnail{:src => '{{ladygagaThumbnail orientation}}'}

%script#video-template{:type => 'text/x-handlebars-template'}
  :erb
    <iframe class="youtube-player" type="text/html" width="360" height="225" src="http://www.youtube.com/embed/X9YMU0WeBwU?xautoplay=1" frameborder="0">
    </iframe>

